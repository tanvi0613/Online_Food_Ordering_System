    <script type="text/javascript">
        window.addEventListener('scroll', function() {
            var value = window.scrollY;
            var screenHeight = window.innerHeight;
            var scrollHeight = document.body.scrollHeight;

            // Calculate the scroll percentage
            var scrollPercentage = (value / (scrollHeight - screenHeight)) * 100;

            // Change background color and content based on scroll percentage
            if (scrollPercentage < 16) {
                document.body.style.backgroundColor = 'rgb(189, 214, 137)';
                document.getElementById("lemon").style.transform = 'translateY(' + value * -0.75 + 'px)';
                document.getElementById("text").style.transform = 'translateY(' + value * 0.75 + 'px)';
                document.querySelector('.first-parallex img').style.transform = 'translateY(' + value * -0.7 + 'px)';
            } else if (scrollPercentage < 32) {
                document.body.style.backgroundColor = 'rgba(188, 89, 89, 0.934)';
                document.getElementById("chilli").style.transform = 'translateY(' + value * -0.75 + 'px)';
                document.getElementById("text1").style.transform = 'translateY(' + (value - screenHeight) * 1.5 + 'px)';
                document.querySelector('.second-parallex img').style.transform = 'translateY(' + (value - screenHeight) * -0.7 + 'px)';
            } else if (scrollPercentage < 48){
                document.body.style.backgroundColor = '#b7c0cd';
                document.getElementById("confetti").style.transform = 'translateY(' + (value - (2 * screenHeight)) * -0.75 + 'px)';
                document.getElementById("text2").style.transform = 'translateY(' + (value - (2 * screenHeight)) * 0.75 + 'px)';
                document.querySelector('.third-parallex img').style.transform = 'translateY(' + (value - (2 * screenHeight)) * -0.7 + 'px)';
            }else if (scrollPercentage < 64){
                document.body.style.backgroundColor = 'rgb(242, 198, 77)';
                document.getElementById("lettuce").style.transform = 'translateY(' + (value - (3 * screenHeight)) * -0.75 + 'px)';
                document.getElementById("text3").style.transform = 'translateY(' + (value - (3 * screenHeight)) * 1.3 + 'px)';
                document.querySelector('.fourth-parallex img').style.transform = 'translateY(' + (value - (3 * screenHeight)) * -0.7 + 'px)';
            }else if (scrollPercentage < 80){
                document.body.style.backgroundColor = '#4d2c1d';
                ocument.getElementById("chips").style.transform = 'translateY(' + (value - (4 * screenHeight)) * -0.75 + 'px)';
                document.getElementById("text4").style.transform = 'translateY(' + (value - (4 * screenHeight)) * 0.75 + 'px)';
                document.querySelector('.fifth-parallex img').style.transform = 'translateY(' + (value - (4 * screenHeight)) * -0.7 + 'px)';
            }else if (scrollPercentage>=90 && scrollPercentage < 100){
                document.body.style.backgroundColor = '#778DA9';
            }
        });
    </script>
